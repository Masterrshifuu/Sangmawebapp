
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Products and Categories can be read by anyone, but only written by auth'd users.
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Users can only read and write their own profile data.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can create orders for themselves and read/update their own orders.
    match /orders/{orderId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Authenticated users can read and write to counters (for order IDs)
    match /counters/{counterId} {
      allow read, write: if request.auth != null;
    }
  }
}
